/* pages/homepage/homepage.wxss */
.seller{
  display: flex;
  flex-direction: row;
  align-items: center;
  border-bottom: dashed #C8C8C8 1px;
  height: 100rpx;
  padding: 20rpx
}

.logo{
  width: 100rpx;
  border-radius: 50%;
  margin: 10rpx;
}

.seller_name{
  font-size: 17px;
  margin-left: 10rpx;
}

.seller_intro{
  font-size: 12px;
  color: #9D9D9D;
  margin-left: 10rpx;
}

.promotion{
  margin-top: 20rpx;
}

.slide-image{
  width: 100%;
}

.block{
  display: flex;
  flex-wrap: wrap;
}

.addSuit{
  width: 50rpx;
}
.suitImg{
  width: 300rpx;
}

.goods{
  margin: 10rpx 30rpx 10rpx 15rpx;
}

.suitInfo1{
  display: flex;
  justify-content: space-between;
  color: #9D9D9D;
  font-size: 12px;
}

.suitPrice{
  color: red;
}

.suitInfo2{
  display: flex;
  justify-content: space-between;
}

.func_blockStyle1{
  width: 30%;
  height: 230rpx;
  background-color: #FEC425;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin: 10rpx;
}

.func_blockStyle1 image {
  width: 100rpx
}
.func_blockStyle2 image {
  width: 100rpx
}

.func_blockStyle1 text{
  font-size: 13px;
  margin-top: 5rpx;
}

.func_blockStyle1 navigator{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.func_blockStyle2 text{
  font-size: 13px;
  margin-top: 5rpx;
}

.func_blockStyle2{
  width: 63%;
  height: 230rpx;
  background-color: #FED772;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin: 10rpx;
}

.func_blockStyle2 navigator{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}