/* pages/homepage/homepage.wxss */
.seller{
  display: flex;
  flex-direction: column;
  align-items: center;
  border-bottom: dashed #C8C8C8 1px;
}

.logo{
  margin-top: 20rpx;
  width: 150rpx;
}

.seller-name{
  font-size: 23px;
}

.seller-intro{
  font-size: 14px;
  color: #9D9D9D;
  margin-bottom: 10rpx;
}

.promotion{
  margin: 20rpx;
}

.slide-image{
  width: 100%;
}

.goodsRecommend{
  display: flex;
  flex-wrap: wrap;
}

.addSuit{
  width: 50rpx;
}
.suitImg{
  width: 300rpx;
}

.goods{
  margin: 10rpx 30rpx 10rpx 15rpx;
}

.suitInfo1{
  display: flex;
  justify-content: space-between;
  color: #9D9D9D;
  font-size: 12px;
}

.suitPrice{
  color: red;
}

.suitInfo2{
  display: flex;
  justify-content: space-between;
}

.cart{
	width:100%;
	height:100rpx;
	box-sizing: border-box;
	position: fixed;
	bottom: 0;
	left:0;
	z-index: 1000;
  align-items: center;
}
.cartParent{
	width:100%;
	height:100rpx;
	background: #000;
	opacity: 0.7;
	box-sizing: border-box;
	position: relative;
}
.cartChild{
	width:750rpx;
	height:100rpx;
	position: fixed;
	bottom:0;
	z-index: 1400;
}
.cartImg{
	opacity: 1;
	float:left;
	width:100rpx;
	height:100rpx;
	border-radius: 50%;
	border:solid 1px #fff;
	text-align: center;
	line-height: 100rpx;
	background: #404040;
	box-sizing: border-box;
	padding-top: 20rpx;
	margin-left: 40rpx;
}
.sumPrice{
	width:200rpx;
	height:100rpx;
	float:left;
	box-sizing: border-box;
	color:#fff;
	line-height: 100rpx;
	padding-left:20rpx;
}
.addPay{
	float:right;
	width:200rpx;
	height:100rpx;
	box-sizing: border-box;
	color:#fff;
	line-height: 100rpx;
	text-align: center;
	font-weight: bold;
	background: #4cd964
}

.label{
  display: flex;
  flex-wrap: nowrap;
  background-color: #F9F9F7;
}

.labelDetail{
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 0 20rpx 10rpx 20rpx;
}

.labelImg{
  width: 150rpx;
}

.labelName{
  font-size: 12px;
}