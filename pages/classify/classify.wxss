/* pages/classify/classify.wxss */
page{
  background: #f5f5f5;
}

.seller{
  position: absolute;
  left: 0px;
  right: 0px;
  display: flex;
  align-items: center;
  width: 100%;
  height: 25%;
}

.seller image{
  width: 150rpx;
  border-radius: 200rpx;
}

.seller text{
  color: #DCA03C;
  font-size: 16px;
}

.nav{
  position: relative;
  background-color: #fff;
  width: 100%;
  height: 100%;
  color: #939393;
}

.nav_left{
  display: inline-block;
  width: 25%;
  height: 100%;
  color: #939393;
  background-color: #f5f5f5;
  text-align: center;
}

.nav_left .nav_left_items{
  height: 40px;
  line-height: 40px;
  padding: 6px 0;
  border-bottom: 1px solid #dedede;
  font-size: 14px;
}

.nav_left .nav_left_items.active{
  background-color: #fff;
  color: #FCC43C;
}

.nav_right{   
  position: absolute;  
  top: 0;  
  right: 0;  
  flex: 1;  
  width: 75%;  
  height: 100%;  
  padding: 10px;  
  box-sizing: border-box;  
  background: #fff; 
}

.nav_right_items{
  display: flex;
  justify-content: flex-start;
  height: 33.33%;
  overflow: hidden;  
  white-space: nowrap;  
  text-overflow: ellipsis;
}

.nav_right_items_img{
  width: 250rpx;
}

.nav_right_items_txt{
  color: black;
  font-size: 13px;
  align-self: flex-start;
}

.nodata_text{
  color: black;
  font-size: 14px;
  text-align: center;
}

.addIcon{
  width: 50rpx;
}